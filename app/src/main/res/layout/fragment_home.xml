<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E4DEDE"
    tools:context=".Fragment.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E4DEDE"
        android:layout_margin="12dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rltly"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintHeight_percent="0.1"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/button_bg_transparent"
                android:drawableLeft="@drawable/ic_baseline_table_rows_24"></Button>

            <Button
                android:id="@+id/btn_cart"
                android:onClick="OnClickCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_bg_transparent"
                android:drawableRight="@drawable/ic_baseline_shopping_cart_24"></Button>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/rltly"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintHeight_percent="0.2"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delicious"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="6sp"
                >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food for you"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingBottom="6sp"
                android:paddingLeft="6sp"
                >
            </TextView>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edt"
            android:layout_width="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintHeight_percent="0.1"
            android:layout_height="wrap_content">
            <EditText
                app:layout_constraintTop_toTopOf="@+id/edt"
                app:layout_constraintRight_toRightOf="@+id/edt"
                app:layout_constraintLeft_toLeftOf="@+id/edt"
                app:layout_constraintBottom_toBottomOf="@+id/edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="OnClickSearch"
                android:hint="Search"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:inputType="text"
                android:background="@drawable/rounded_edittext"
                android:padding="12dp"
                android:layout_gravity="center"
                app:layout_constraintWidth_percent="0.8"
                >
            </EditText>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/menu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt"
            app:layout_constraintHeight_percent="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="6sp"
            >
            <TextView
                android:id="@+id/home_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foods"
                android:padding="4sp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/purple_500"
                >
            </TextView>
            <TextView
                android:id="@+id/home_drinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drinks"
                android:padding="4sp"
                android:textStyle="bold"
                android:textSize="18dp"
                >
            </TextView>
            <TextView
                android:id="@+id/home_snacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snacks"
                android:padding="4sp"
                android:textStyle="bold"
                android:textSize="18dp"
                >
            </TextView>
            <TextView
                android:id="@+id/home_vegetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetables"
                android:padding="4sp"
                android:textStyle="bold"
                android:textSize="18dp"
                >
            </TextView>
        </LinearLayout>
        <GridView
            android:id="@+id/grid_shop"
            android:numColumns="2"
            android:layout_marginTop="12dp"
            android:verticalSpacing="6dp"
            android:horizontalSpacing="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- TODO: Update blank fragment layout -->
</FrameLayout>