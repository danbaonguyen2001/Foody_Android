<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E4DEDE"
    android:layout_height="match_parent"
    tools:context=".Activity.SearchActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper_edtSearch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        >
        <Button
            android:id="@+id/btn_back_search"
            android:onClick="backHome"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edt_searchShop"
            android:drawableRight="@drawable/ic_baseline_arrow_back_24"
            android:background="@drawable/button_bg_transparent"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.1"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_searchShop"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_back_search"
            android:background="@drawable/rounded_edittext"
            android:layout_width="0dp"
            app:layout_constraintHeight_percent="0.9"
            android:layout_marginLeft="6dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ListView
        android:id="@+id/listview_food_search"
        app:layout_constraintTop_toBottomOf="@id/wrapper_edtSearch"
        android:padding="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>