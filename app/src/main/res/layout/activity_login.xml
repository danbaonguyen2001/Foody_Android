<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:background="#E4DEDE">


    <ImageView
        android:id="@+id/imgHamburger"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/hamburger"

        android:paddingTop="30dp"
        android:paddingBottom="70dp"
        android:background="@drawable/custom_imgview"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Log in"
        android:textSize="25dp"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="-40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvSignup"
        app:layout_constraintTop_toBottomOf="@id/imgHamburger"
        />
    <TextView
        android:id="@+id/tvSignup"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Sign-up"
        android:textSize="25dp"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="-40dp"
        app:layout_constraintTop_toBottomOf="@id/imgHamburger"
        app:layout_constraintLeft_toRightOf="@id/tvLogin"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>