<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@drawable/back"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_shop_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/wrapper_shop_content"
        android:src="@drawable/hamburger"
        android:scaleType="fitXY"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <LinearLayout
        android:id="@+id/wrapper_shop_content"
        app:layout_constraintLeft_toRightOf="@id/img_shop_search"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/food_name_shop"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:text="Hamburger"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/food_address_shop"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Food For You"
            />
        <TextView
            android:id="@+id/shop_status"
            android:text="Opening"
            android:textSize="16dp"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>